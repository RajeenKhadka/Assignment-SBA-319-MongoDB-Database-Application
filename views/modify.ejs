<head>
  <link rel="stylesheet" href="/css/main.css" />
</head>
<h1>Edit Student</h1>
<form action="/api/students/<%= student._id %>?_method=PUT" method="POST">
  <label>
    First Name:
    <input type="text" name="name.first" value="<%= student.name.first %>" required />
  </label>
  <br />
  <label>
    Last Name:
    <input type="text" name="name.last" value="<%= student.name.last %>" required />
  </label>
  <br />
  <label>
    Email:
    <input type="email" name="email" value="<%= student.email %>" required />
  </label>
  <br />
  <label>
    Age:
    <input type="number" name="age" value="<%= student.age %>" required min="5" max="100" />
  </label>
  <br />
  <label>
    Instrument:
    <select name="instrument" required>
      <option value="guitar" <%= student.instrument === 'guitar' ? 'selected' : '' %>>Guitar</option>
      <option value="bass" <%= student.instrument === 'bass' ? 'selected' : '' %>>Bass</option>
      <option value="drums" <%= student.instrument === 'drums' ? 'selected' : '' %>>Drums</option>
      <option value="vocals" <%= student.instrument === 'vocals' ? 'selected' : '' %>>Vocals</option>
      <option value="keys" <%= student.instrument === 'keys' ? 'selected' : '' %>>Keys</option>
      <option value="other" <%= student.instrument === 'other' ? 'selected' : '' %>>Other</option>
    </select>
  </label>
  <br />
  <label>
    Skill Level:
    <select name="skillLevel" required>
      <option value="beginner" <%= student.skillLevel === 'beginner' ? 'selected' : '' %>>Beginner</option>
      <option value="intermediate" <%= student.skillLevel === 'intermediate' ? 'selected' : '' %>>Intermediate</option>
      <option value="advanced" <%= student.skillLevel === 'advanced' ? 'selected' : '' %>>Advanced</option>
    </select>
  </label>
  <br />
  <label>
    Enrolled:
    <input type="checkbox" name="enrolled" <%= student.enrolled ? 'checked' : '' %> />
  </label>
  <br />
  <input type="submit" value="Update Student" />
</form>
